[tool:pytest]
# Test discovery
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Output options
addopts =
    -ra
    --strict-markers
    --strict-config
    --tb=short
    -v

# Markers
markers =
    slow: marks tests as slow (deselect with '-m "not slow"')
    gpu: marks tests that require GPU (deselect with '-m "not gpu"')
    skip_ci: marks tests to skip in CI (deselect with '-m "not skip_ci"')
    experimental: marks tests as experimental (deselect with '-m "not experimental"')

# Warning filters
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    ignore:.*CUDA extension.*:RuntimeWarning
    ignore:.*torch.searchsorted.*:UserWarning
    # Ignore default value warnings in tests - these are intentional
    ignore:.*was not provided, using default value.*:UserWarning
